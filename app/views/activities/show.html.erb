<div class="container">
  <div class="row">
    <div class="col-md-12 mx-auto">
      <div class="bg-light shadow mt-5 border p-5">
        <div class="col-md-6">
          <h2><%= @activity.activity_name.name %></h2>
          <table class="table">
            <tr>
              <th>Date</th>
              <td><%= @activity.date.strftime("%B %d, %Y") %></td>
            </tr>
            <tr>
              <th>Duration</th>
              <td><%= @activity.duration %> minutes</td>
            </tr>
            <tr>
              <th>Comment</th>
              <td><%= @activity.comment %></td>
            </tr>
          </table>
          <%= link_to "Edit", edit_activity_path(@activity), class: "btn btn-secondary" %>
          <%= link_to "Back", activities_path, class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  </div>
</div>
