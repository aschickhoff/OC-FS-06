<p style="color: green"><%= notice %></p>
<h1><%= @activity.activity_name.name %></h1>
<table class="table">
  <tr>
    <th>Date</th>
    <td><%= @activity.date.strftime("%B %d, %Y") %></td>
  </tr>
  <tr>
    <th>Duration</th>
    <td><%= @activity.duration %> minutes</td>
  </tr>
</table>
<%= link_to 'Edit', edit_activity_path(@activity), class: 'btn btn-secondary' %>
<%= link_to 'Delete', activity_path(@activity),
method: :delete,
data: { confirm: 'Are you sure?' },
class: 'btn btn-danger' %>
<%= link_to 'Back', activities_path, class: 'btn btn-primary' %>
