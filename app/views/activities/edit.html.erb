<h1>Edit Activity</h1>
<%= form_with(model: @activity, local: true) do |form| %>
  <%= render 'shared/error_messages', object: form.object %>
  <div class="mb-3">
    <%= form.label :activity_name_id %>
    <%= form.collection_select :activity_name_id, ActivityName.all, :id, :name, class: 'form-control' %>
  </div>
  <div class="mb-3">
    <%= form.label :date %>
    <%= form.date_field :date, class: 'form-control' %>
  </div>
  <div class="mb-3">
    <%= form.label :duration %>
    <%= form.number_field :duration, class: 'form-control' %>
  </div>
  <%= form.submit 'Update', class: 'btn btn-primary' %>
  <%= link_to 'Cancel', activity_path(@activity), class: 'btn btn-secondary' %>
<% end %>
