<div class="col-lg-4 p-5 mx-lg-auto">
  <div class="card shadow">
    <div class="card-header">
      <h2 class="card-title text-center">Sign Up</h2>
    </div>
    <div class="card-body">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="mb-2">
          <%= f.label :username %><br />
          <%= f.text_field :username, class: "form-control form-control-sm" %>
        </div>
        <div class="mb-2">
          <%= f.label :email %><br />
          <%= f.email_field :email, autocomplete: "email", class: "form-control form-control-sm" %>
        </div>
        <div class="mb-2">
          <%= f.label :password %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters min)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control form-control-sm" %>
        </div>
        <div class="mb-2">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control form-control-sm" %>
        </div>
        <div class="actions">
          <%= f.submit "Sign up", class: "btn btn-lg btn-primary" %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
